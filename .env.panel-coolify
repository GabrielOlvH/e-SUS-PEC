DB_USER=esus_leitura  # Use read-only user for safety
DB_PASSWORD=your-readonly-password

# LOCATION CONFIGURATION (Required)
# Find your IBGE code: https://www.ibge.gov.br/explica/codigos-dos-municipios.php
CIDADE_IBGE=2927408  # Example: Salvador-BA
ESTADO=BA  # Your state (BA, SP, RJ, etc)
POPULATION=2886698  # Your city population

# PANEL ADMIN CREDENTIALS
ADMIN_USERNAME=admin
# Leave empty for Coolify to auto-generate with SERVICE_PASSWORD_ADMIN
ADMIN_PASSWORD=

# SECURITY TOKENS
# Leave empty for Coolify to auto-generate
SECRET_TOKEN=
PASSWORD_SALT=

# Optional Bridge Login URL
BRIDGE_LOGIN_URL=

# ========================================
# Coolify will automatically set:
# - SERVICE_FQDN_PAINEL (domain)
# - SERVICE_PASSWORD_ADMIN (if ADMIN_PASSWORD is empty)
# - SERVICE_GENERATED_SECRET (if SECRET_TOKEN is empty)
# - SERVICE_GENERATED_SALT (if PASSWORD_SALT is empty)
